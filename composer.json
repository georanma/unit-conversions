{
    "name": "georanma/Unit Conversions",
    "description": "A PHP package to help convert units of measurement.",
    "keywords": [
        "georanma",
        "Unit Conversions"
    ],
    "homepage": "https://github.com/georanma/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "George Birnbaum",
            "email": "georanma@gmail.com",
            "homepage": "https://georanma.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Georanma\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Georanma\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
